{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "spec/**/*.ts",
    "src/**/*.spec.ts",
    "src/index.ts",
    "jest.config.mjs"
  ]
}